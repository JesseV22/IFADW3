{% extends "templates/base.html" %}
{% block content %}
<ol class="breadcrumb mb-2">
  <li class="breadcrumb-item active">{{ title }}</li>
</ol>
<div class="row">
  <div class="col-xl-12">
    <div class="card-header">
      Manutenção de Grupos
    </div>
    <div class="card-body">
      <div class="">
        <div style="margin-bottom: 15px;">
          <a href="/grupos/insertGrupos" class="btn btn-primary">Inserir novo grupo</a>
        </div>
        <div style="background-color: #f8f9fa">
          <table id="tabGrupos" class="display" style="width:100%">
            <thead>
              <tr>
                <th>Ação</th>
                <th>Código</th>
                <th>Descrição</th>
              </tr>
            </thead>
            <tbody>
              {% for reg in data %}
                <tr>
                  <td>
                    <a href="/grupos/viewGrupos/{{ reg.grupoid }}" title="Visualizar">
                      <i class="fas fa-search"></i>
                    </a>
                    <a href="/grupos/updateGrupos/{{ reg.grupoid }}" title="Atualizar" style="margin-left: 10px;">
                      <i class="fas fa-pencil-alt"></i>
                    </a>
                  </td>
                  <td>{{ reg.codigo }}</td>
                  <td>{{ reg.descricao }}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  window.onload = function () {
    windowOnLoad();
    const localErro = "{{ erro }}";
    if (localErro != "") {
      alert("[vwGrupos|onload]Servidor retornou o erro:" + localErro);
    }
    new DataTable('#tabGrupos');
  };
</script>
{% endblock %}
